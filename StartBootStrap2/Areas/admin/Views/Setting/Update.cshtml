@model Setting
@{
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="setting" asp-action="update" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Logo" class="form-label">Logo</label>
                    <input class="form-control" asp-for="@Model.Logo">
                    <span asp-validation-for="@Model.Logo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SubTitle" class="form-label">SubTitle</label>
                    <input class="form-control" asp-for="@Model.SubTitle">
                    <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.CopyrightYear" class="form-label">CopyrightYear</label>
                    <input class="form-control" asp-for="@Model.CopyrightYear">
                    <span asp-validation-for="@Model.CopyrightYear" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Id" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>

